{
    "manifest_version": 2,

    "name":         "GitHub Streak",
    "short_name":   "Git Streak",
    "description":  "Displays a user's longest GitHub streak in the last year.",
    "version":      "1.0.0",
    "version_name": "1.0.0 Yearly 'Quota'",
    "homepage_url": "https://github.com/ed-flanagan/github-streak",
    "author":       "Ed Flanagan",

    "icons": {
        "16":  "icons/icon16.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "offline_enabled": false,
    "permissions": [
        "*://github.com/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "run_at": "document_start",
            "all_frames": false,
            "js": [
                "lib/jquery-2.2.4.min.js"
            ]
        },
        {
            "matches": [
                "*://github.com/*"
            ],
            "run_at": "document_end",
            "all_frames": false,
            "js": [
                "streak.js"
            ]
        }
    ]
}

